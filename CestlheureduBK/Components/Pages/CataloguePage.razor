@page "/carte"
@inject DataService dataService

<PageTitle>C'est l'heure du BK ! - La carte</PageTitle>

<Catalogue Data="@data" Restaurant="@restaurant" Update="@update" />

@code {
    private CatalogueDisplay[]? data;
    private RestaurantDisplay? restaurant;
    private UpdateDisplay? update;

    protected override async Task OnInitializedAsync()
    {
        data = await dataService.GetCatalogue();
        restaurant = await dataService.GetRestaurant();       
        update = await dataService.GetUpdate(); 
    }
}
