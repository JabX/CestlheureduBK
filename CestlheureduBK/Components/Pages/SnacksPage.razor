@page "/snacks"
@page "/snacks/{restaurantId}"
@using CestlheureduBK.Services

@inject GetDataService getDataService

<PageTitle>C'est l'heure du BK ! - Rentabilité des snacks</PageTitle>

<h1>Rentabilité des snacks</h1>

<Header Restaurant=@restaurant />

@if (data != null && restaurant?.CatalogueUpdate != null)
{
    <Snacks Data="@data"  />
}

@code {
    private SnackDisplay[]? data;
    private RestaurantDisplay? restaurant;

    [Parameter]
    public string? RestaurantId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        restaurant = await getDataService.GetRestaurant(RestaurantId);
        if (restaurant != null)
        {
            data = await getDataService.GetSnacks(restaurant.Id);
        }
    }
}
