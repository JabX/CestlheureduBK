@page "/"
@inject IDataService dataService

<PageTitle>C'est l'heure du BK ! - Rentabilité des couronnes</PageTitle>

<Points Data="@data" Restaurant="@restaurant" Update="@update" />

@code {
    private OfferDisplay[]? data;
    private RestaurantDisplay? restaurant;
    private UpdateDisplay? update;

    protected override async Task OnInitializedAsync()
    {
        data = await dataService.GetOffers(new());
        restaurant = await dataService.GetRestaurant();
        update = await dataService.GetUpdate();
    }
}
