@page "/"
@page "/points"
@page "/points/{restaurantId}"
@using CestlheureduBK.Services

@inject GetDataService getDataService

<PageTitle>C'est l'heure du BK ! - Rentabilité des couronnes</PageTitle>

<h1>Rentabilité des couronnes</h1>

<Header Data=@headerData />

@if ((data?.Length ?? 0) > 0)
{
    <Points Data="@data" />
}

@code {
    private OfferDisplay[]? data;
    private HeaderDisplay? headerData;

    [Parameter]
    public string? RestaurantId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        headerData = await getDataService.GetHeaderData(RestaurantId);

        if (headerData.Restaurant != null)
        {
            data = await getDataService.GetOffers(headerData.Restaurant.Id);
        }
    }
}
